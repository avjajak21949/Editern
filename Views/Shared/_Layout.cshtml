<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Editern</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Left Side: Logo and Title -->
                <div class="navbar-brand d-flex align-items-center">
                    <img src="~\wwwroot\favicon.ico" alt="Company Logo" class="me-2" style="height: 40px;">
                    <span class="fs-4">Profile Overview</span>
                </div>

                <!-- Right Side: Login Button -->
                <div class="ms-auto">
                    <a href="#" class="btn btn-outline-primary">Login</a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container py-5">
            <div class="row">
                <!-- Three Columns -->
                <div class="col-md-4 mb-3">
                    <h5>Column One</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-decoration-none">Link One</a></li>
                        <!-- ... other links ... -->
                    </ul>
                </div>
                <!-- Repeat for Column Two and Three -->
            </div>

            <!-- Copyright Section with Address -->
            <div class="border-top pt-3 mt-3">
                <div class="row">
                    <!-- Address on Bottom Left -->
                    <div class="col-md-6">
                        <p class="mb-0">123 Main Street, City</p>
                        <p class="mb-0">State Province, Country</p>
                    </div>

                    <!-- Copyright and Legal Links on Bottom Right -->
                    <div class="col-md-6 text-md-end">
                        <div class="d-flex justify-content-end gap-3">
                            <span>&copy; 2024 Your Website. All rights reserved.</span>
                            <div>
                                <a href="#" class="text-decoration-none me-3">Privacy Policy</a>
                                <a href="#" class="text-decoration-none">Terms of Service</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>


